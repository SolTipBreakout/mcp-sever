# Production Environment Configuration
# Copy this file to .env for production deployment

# Server configuration
PORT=3000
NODE_ENV=production
CORS_ORIGIN=your-frontend-domain.com

# Solana configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_PRIVATE_KEY="YOUR_SOLANA_PRIVATE_KEY_HERE"
RPC_URL=https://api.mainnet-beta.solana.com
WALLET_ENCRYPTION_KEY="GENERATE_A_SECURE_RANDOM_KEY_HERE"

# Database configuration
SQLITE_PATH=/app/database/wallet-data.db

# Logging configuration
LOG_LEVEL=info

# MCP configuration
MCP_PATH=/mcp

# Authentication configuration - IMPORTANT FOR PRODUCTION
API_AUTH_ENABLED=true
API_KEYS=YOUR_SECURE_API_KEY_HERE
API_KEY_HEADER=x-api-key 